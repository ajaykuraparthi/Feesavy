<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backsplash">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eef7ff"
        android:minHeight="800dp">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="421dp"
            android:layout_height="317dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.004"
            app:srcCompat="@drawable/loginback" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="238dp"
            android:layout_height="41dp"
            android:text=" Student Login"
            android:textAlignment="center"
            android:textColor="#1D6BAA"
            android:textSize="28dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.583"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout"
            android:layout_width="296dp"
            android:layout_height="51dp"
            android:hint="Pin Number"
            android:textColorHint="#0B0A0A"

            app:hintTextColor="#0B0A0A"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.53"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.605"
            tools:ignore="MissingConstraints">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/pinno"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/et_style"
                android:drawableLeft="@drawable/keylock"
                android:drawablePadding="10dp"
                android:maxLength="12"
                android:maxLines="1"
                android:minLines="1"
                android:textSize="14dp"
                tools:ignore="TextSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout2"
            android:layout_width="298dp"
            android:layout_height="51dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="148dp"
            android:hint="College Code"
            android:textColorHint="#0B0A0A"
            app:hintTextColor="#0B0A0A"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.522"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
            app:layout_constraintVertical_bias="0.27">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/code"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/et_style"
                android:drawableLeft="@drawable/college"
                android:drawablePadding="10dp"
                android:ellipsize="end"
                android:inputType="number"
                android:maxLength="3"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:textSize="14dp"
                tools:ignore="TextSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/login"
            android:layout_width="146dp"
            android:layout_height="48dp"
            android:layout_marginBottom="68dp"
            android:backgroundTint="#2D6998"
            android:text="Login"
            android:textColor="#FFFFFF"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.535"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout2"
            app:layout_constraintVertical_bias="0.567"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/back"
            android:layout_width="41dp"
            android:layout_height="39dp"
            android:background="@drawable/arrow"
            android:backgroundTint="#03141C"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.045"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.023" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>